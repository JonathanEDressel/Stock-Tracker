@model Portfolio_Tracker.Models.ChartModel

<canvas id="myPieChart" style="width: 100%; max-width: 400px; height: auto;" width="400" height="400"></canvas>

<script>
    const data = {
        labels: @Html.Raw(Json.Serialize(Model.Labels)),
        datasets: [{
            data: @Html.Raw(Json.Serialize(Model.Data)),
            borderWidth: 2
        }]
    };

    const config = {
        type: 'pie',
        data: data,
        options: {
            responsive: true,
            maintainAspectRatio: false,
        }
    };

    const ctx = document.getElementById('myPieChart').getContext('2d');
    new Chart(ctx, config);
</script>
